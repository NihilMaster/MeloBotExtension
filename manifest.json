{
  "manifest_version": 3,
  "name": "Melo-bot",
  "version": "2.0",
  "description": "Lee el contenido que digitaste y te ayuda a ser m√°s elocuente.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://api.openai.com/",
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "constants.js",
        "api-handler.js", 
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["constants.js", "api-handler.js"],
    "matches": ["<all_urls>"]
  }]
}